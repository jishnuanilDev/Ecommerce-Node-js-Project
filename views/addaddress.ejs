            <form method="post" action="/user/useraddress">
             <div class="form-row">
               <div class="form-group col-md-6">
                 <label for="inputEmail4">Recipient name: <span style="color: crimson;">*</span></label>
                 <input type="text" class="form-control" id="inputEmail4" name="name"  required>
               </div>
               <div class="form-group  col-md-6">
